<%= form_for [:admin, @course] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <% @subjects.each do |subject| %>
    <%= f.label :subject_ids, class: "checkbox inline" do %>
      <%= f.check_box :subject_ids, {name: "course[subject_ids][]",
        checked: @course.subjects.include?(subject)}, subject.id, nil %>
      <span><%= subject.name %></span>
    <% end %>
  <% end %>
  <%= f.submit (f.object.new_record? ? t("buttons.course.new") : t("buttons.course.update")),
    class: "btn btn-primary" %>
<% end %>
